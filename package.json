{
  "name": "robodoc",
  "version": "1.2.1",
  "description": "RoboDoc - WhatsApp Bulk Sender for World Vision Romania",
  "private": true,
  "type": "module",
  "scripts": {
    "install:all": "yarn install && cd backend && yarn install && cd ../frontend && yarn install",
    "install:backend": "cd backend && yarn install",
    "install:frontend": "cd frontend && yarn install",
    "start": "yarn start:backend",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && yarn dev",
    "dev": "yarn dev:all -- --host",
    "dev:all": "concurrently \"yarn start:backend\" \"yarn start:frontend\"",
    "dev:backend": "cd backend && yarn dev",
    "dev:frontend": "cd frontend && yarn dev",
    "build": "node scripts/build-and-copy.js",
    "build:frontend": "cd frontend && yarn build",
    "build:copy": "node scripts/build-and-copy.js",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules backend/.wwebjs_auth backend/public"
  },
  "keywords": [
    "whatsapp",
    "bulk-sender",
    "excel",
    "world-vision-romania"
  ],
  "author": "World Vision Romania",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "whatsapp-web.js": "github:seowzhenjun0126/whatsapp-web.js#fix-lid-missing-in-chat-table"
  }
}
